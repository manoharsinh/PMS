<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:admin_session, url: loginforadmin_path) do |f| %>

     <p>
    
   <%= f.select (:credentials), ['email','phonenumber'] %>
   <%= f.text_field :credentials_type, class: 'form-control' %>
     </p>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>
